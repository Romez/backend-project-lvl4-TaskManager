extends ../layouts/application.pug

block header
  = t('views.labels.edit.header')

block content
  +formFor()(action=route('updateLabel', { id: label.id }) method="post")
    input(name="_method" type="hidden" value="patch")
    +input(label, t('views.labels.edit.name'), 'name', errors)(type="text")
    +submit()(value=t('views.labels.edit.submit'))
